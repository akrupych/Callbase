<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                tools:src="@mipmap/ic_launcher"/>

            <LinearLayout
                android:id="@+id/fields_holder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Andriy Krupych" />

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="+380637467485" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="04.04.2016 01:49" />

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="69 seconds" />
            </LinearLayout>

            <ImageView
                android:id="@+id/call_type"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                tools:src="@drawable/incoming_call"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/actions_panel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/call_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                android:contentDescription="@string/call"
                android:src="@drawable/ic_local_phone" />

            <ImageButton
                android:id="@+id/sms_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                android:contentDescription="@string/sms"
                android:src="@drawable/ic_sms" />

            <ImageButton
                android:id="@+id/contact_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                android:contentDescription="@string/contact"
                android:src="@drawable/ic_contacts" />

            <ImageButton
                android:id="@+id/copy_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                android:contentDescription="@string/contact"
                android:src="@drawable/ic_copy" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>